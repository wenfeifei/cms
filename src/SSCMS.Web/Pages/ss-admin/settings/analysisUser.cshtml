@page
@{ Layout = "_Layout"; }

<el-form :inline="true" :model="formInline" size="mini">
  <el-form-item label="从">
    <el-date-picker
      v-model="formInline.dateFrom"
      type="date"
      placeholder="选择开始日期">
    </el-date-picker>
  </el-form-item>
  <el-form-item label="到">
    <el-date-picker
      v-model="formInline.dateTo"
      type="date"
      placeholder="选择结束日期">
    </el-date-picker>
  </el-form-item>
  <el-form-item label="X轴">
    <el-select v-model="formInline.xType">
      <el-option label="日" value="Day"></el-option>
      <el-option label="月" value="Month"></el-option>
      <el-option label="年" value="Year"></el-option>
    </el-select>
  </el-form-item>
  
  <el-form-item>
    <el-button type="primary" v-on:click="btnSearchClick">统计</el-button>
  </el-form-item>
</el-form>

<el-divider></el-divider>
<v-chart :options="chartOption" style="width: 100%; height: 450px;"/>

@section Scripts{
<script src="/sitefiles/assets/lib/echarts/echarts-4.1.0.min.js"></script>
<script src="/sitefiles/assets/lib/echarts/vue-echarts-4.0.2.min.js"></script>
<script src="/sitefiles/assets/js/admin/settings/analysisUser.js" type="text/javascript"></script> }