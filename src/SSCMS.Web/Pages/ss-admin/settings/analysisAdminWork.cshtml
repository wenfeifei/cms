@page
@{ Layout = "_Layout"; }

<el-form :inline="true" :model="formInline" size="mini">
  <el-form-item label="站点">
    <el-cascader
    v-model="formInline.siteIds"
    ref="sites"
    :options="siteOptions"
    :props="{ multiple: false, checkStrictly: true }"
    clearable></el-cascader>
  </el-form-item>
  <el-form-item label="从">
    <el-date-picker
      v-model="formInline.dateFrom"
      type="date"
      placeholder="选择开始日期">
    </el-date-picker>
  </el-form-item>
  <el-form-item label="到">
    <el-date-picker
      v-model="formInline.dateTo"
      type="date"
      placeholder="选择结束日期">
    </el-date-picker>
  </el-form-item>
  
  <el-form-item>
    <el-button type="primary" v-on:click="btnSearchClick">统计</el-button>
  </el-form-item>
</el-form>

<div class="text-center">
  <el-radio-group v-model="pageType" size="small">
    <el-radio-button label="chart">按图表显示</el-radio-button>
    <el-radio-button label="table">按表格显示</el-radio-button>
  </el-radio-group>
</div>

<el-divider></el-divider>

<el-table
  v-if="pageType === 'table'"
  :data="items"
  style="width: 100%">
  <el-table-column
    label="管理员">
    <template slot-scope="scope">
      <el-link :underline="false" type="primary" v-on:click="btnUserClick(scope.row.userName)">{{scope.row.userName}}</el-link>
    </template>
  </el-table-column>
  <el-table-column
    prop="addCount"
    label="新增（次）">
  </el-table-column>
  <el-table-column
    prop="updateCount"
    label="修改（次）">
  </el-table-column>
</el-table>

<v-chart v-if="pageType === 'chart'" :options="chartOption" style="width: 100%; height: 450px;"/>

@section Scripts{
<script src="/sitefiles/assets/lib/echarts/echarts-4.1.0.min.js"></script>
<script src="/sitefiles/assets/lib/echarts/vue-echarts-4.0.2.min.js"></script>
<script src="/sitefiles/assets/js/admin/settings/analysisAdminWork.js" type="text/javascript"></script> }